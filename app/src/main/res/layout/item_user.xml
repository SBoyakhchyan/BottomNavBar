<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1F1B5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/listData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_10"
        android:textColor="#091D2E"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/first_names" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/dimens_10"
        app:layout_constraintStart_toStartOf="@id/listData"
        app:layout_constraintTop_toBottomOf="@id/listData"
        tools:background="@drawable/ic_faces_for_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>