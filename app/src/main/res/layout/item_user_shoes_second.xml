<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="@dimen/dimens_5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_shoes_second"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/dimens_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_faces_for_header" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/shoe_text_second"
        style="@style/home_tag_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/shoe_text_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_shoes_second"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_5dp"
        android:padding="@dimen/dimens_5dp"
        android:text="@string/example_price"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_shoes_second"
        app:layout_constraintTop_toBottomOf="@id/shoe_text_second" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/shoe_btn_back"
        android:padding="@dimen/dimens_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shoe_text_second"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/shoe_btn_back"
        android:paddingHorizontal="@dimen/dimens_10"
        android:paddingVertical="@dimen/dimens_7"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_15"
        app:layout_constraintStart_toEndOf="@id/imageAdd"
        app:layout_constraintTop_toBottomOf="@id/shoe_text_second"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageMinus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/shoe_btn_back"
        android:padding="@dimen/dimens_5dp"
        app:layout_constraintTop_toBottomOf="@id/shoe_text_second"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCount"
        app:srcCompat="@drawable/ic_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>
